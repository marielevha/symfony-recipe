{% extends 'auth/layout.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="{{ asset('auth/images/img-01.png') }}" alt="IMG">
                </div>
                {{ form_start(form, {'attr': {'method': 'POST', 'class': 'login100-form validate-form'}}) }}
                {#<form method="post" action="{{ path('register') }}" class="login100-form validate-form">#}
					<span class="login100-form-title">
						Member Register
					</span>

                    <div class="wrap-input100 validate-input" data-validate = "Valid name is required: John Doe">
                        {#<input class="input100" type="text" name="name" placeholder="Name">#}
                        {{ form_widget(form.username, {'attr': {'class': 'input100', 'placeholder': 'Name'}}) }}
                        {{ form_errors(form.username) }}
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
							<i class="fa fa-user" aria-hidden="true"></i>
						</span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
                        {#<input class="input100" type="text" name="email" placeholder="Email">#}
                        {{ form_widget(form.email, {'attr': {'class': 'input100', 'placeholder': 'Email'}}) }}
                        {{ form_errors(form.email) }}
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
							<i class="fa fa-envelope" aria-hidden="true"></i>
						</span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate = "Password is required">
                        {#<input class="input100" type="password" name="pass" placeholder="Password">#}
                        {{ form_widget(form.password, {'attr': {'class': 'input100', 'placeholder': 'Password'}}) }}
                        {{ form_errors(form.password) }}
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
							<i class="fa fa-lock" aria-hidden="true"></i>
						</span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate = "Password is required">
                        {#<input class="input100" type="password" name="pass" placeholder="Password">#}
                        {{ form_widget(form.confirm_password, {'attr': {'class': 'input100', 'placeholder': 'Confirm Password'}}) }}
                        {{ form_errors(form.confirm_password) }}
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
							<i class="fa fa-lock" aria-hidden="true"></i>
						</span>
                    </div>

                    {#<div class="wrap-input100 validate-input" data-validate = "Password is required">
                        #}{#<input class="input100" type="password" name="pass_confirmation" placeholder="Password">#}{#
                        {{ form_widget(form.code, {'attr': {type: 'password', 'class': 'input100', 'placeholder': 'Confirm Password'}}) }}
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
							<i class="fa fa-lock" aria-hidden="true"></i>
						</span>
                    </div>#}

                    <div class="container-login100-form-btn">
                        <button type="submit" class="login100-form-btn">
                            Register
                        </button>
                    </div>

                    <div class="text-center p-t-12">
						<span class="txt1">
							Forgot
						</span>
                        <a class="txt2" href="#">
                            Username / Password?
                        </a>
                    </div>

                    <div class="text-center p-t-136">
                        <a class="txt2" href="{{ path('login') }}">
                            Create your Account
                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                        </a>
                    </div>
                {#</form>#}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}