{% extends 'base.html.twig' %}

{% block title %}LISTE CATEGORIES{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Liste Categories</h1>

        <div class="card">
            <div class="card-header navbar navbar-light bg-light justify-content-between">
                <a href="{{ path('categorie_new') }}">
                    <button id="add-button" class="btn btn-outline-success" type="button">
                        Ajouter catégorie
                    </button>
                </a>
            </div>
        </div>


        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Designation</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.id }}</td>
                        <td>{{ category.nom }}</td>
                        <td>{{ category.description }}</td>
                        <td>
                            <a href="{{ path('categorie_show', {'id': category.id}) }}">
                                <button type="button" class="btn btn-primary">
                                    <i class="fa fa-eye"></i>
                                </button>
                            </a>
                            <a href="{{ path('categorie_edit', {'id': category.id}) }}">
                                <button type="button" class="btn btn-success">
                                    <i class="fa fa-edit"></i>
                                </button>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">Aucun résultats trouvés</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
